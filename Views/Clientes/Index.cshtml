@{
  ViewData["Title"] = "Clientes";
}

<body>
  <!-- Modal data-backdrop="static" data-keyboard="false"-->
  <div class="modal fade" id="ModalCliente" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Agregar Cliente</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input type="hidden" id="ClienteID" value="0" />
          <div>
            <label class="control-label">Nombre y Apellido</label>
            <input type="text" class="form-control" id="NombreApellido" autocomplete="off" required="required" />
          </div>
          <div>
            <label class="control-label">Direccion</label>
            <input type="text" class="form-control" id="Direccion" autocomplete="off" required="required" />
          </div>
          <div>
            <label class="control-label">Telefono</label>
            <input type="text" class="form-control" id="Telefono" autocomplete="off" required="required" />
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          <button type="button" onclick="GuardarCliente()" class="btn btn-primary">Guardar Cliente</button>
        </div>
      </div>
    </div>
  </div>
  

  <div>
    <h1 class="display-4 titulostabla">CLIENTES</h1>
    <!-- Button trigger modal -->
    <div class="mb-2">
      <button type="button" onclick="VaciarFormulario()" class="btn btn-primary" data-toggle="modal"
        data-target="#ModalCliente">
        Agregar
      </button>
    </div>
    <!-- Button trigger modal -->


    <table class="table table-bordered table-striped table-condensed container">
      <thead>
        <tr class="tr letrastabla">
          <th><h1>Nombre y Apellido</h1></th>
          <th><h1>Direccion</h1></th>
          <th><h1>Telefono</h1></th>
          <th><h1>Acciones</h1></th>
        </tr>
      </thead>
      <tbody id="tbody-Clientes">
      </tbody>
    </table>
  </div>

</body>

@section Scripts {
  <script src="~/js/agregarCliente.js"></script>
}