@* @model Pedi_ABC.Modelos.Pedido *@

@{
    Layout = "_Layout";
}

<head>
    <title>Crear Pedido</title>
</head>

<body>

    <!-- Modal data-backdrop="static" data-keyboard="false"-->
    <div class="modal fade" id="ModalPedidos" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Agregar Pedidos</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form id="files" method="post" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" name="productoID" id="productoID" value="0" />
                        <div>
                            <label class="control-label">Nombre</label>
                            <input type="text" class="form-control" style="text-transform: uppercase;" id="Nombre"
                                name="Nombre" />
                            <span class="text-danger" id="texto-error"></span>
                        </div>
                        <div>
                            <label class="control-label">Productos</label>
                            @Html.DropDownList("ProductoID" , null, htmlAttributes: new {@class="form-control"})
                            @* <select asp-for="ClienteID" asp-items="ViewBag.ClienteID"></select> *@
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="submit" onclick="AgregarProductoTemporal()" class="btn btn-primary">Agregar
                            Pedido</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


        <h4>Pedido</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <label class="control-label">Direcion</label>
                        <input type="text" class="form-control" style="text-transform: uppercase;" id="Direcion"
                            name="Direcion" />
                        <span class="text-danger" id="texto-error"></span>
                    </div>
                    <div>
                        <label class="control-label">Cliente</label>
                    @* @Html.DropDownList("NombreApellido" , null, htmlAttributes: new {@class="form-control"}) *@
                    </div>
                    <div>
                        <label class="control-label">Total A Pagar</label>
                        <input type="text" class="form-control" style="text-transform: uppercase;" id="TotalAPagar"
                            name="TotalAPagar" />
                        <span class="text-danger" id="texto-error"></span>
                    </div>
                    <div>
                        <label class="control-label">Fecha y Hora de Pedido</label>
                        <input type="text" class="form-control" style="text-transform: uppercase;" id="FechayHoraPedido"
                            name="FechayHoraPedido" />
                        <span class="text-danger" id="texto-error"></span>
                    </div>
                    <div>
                        <label class="control-label">Estados de Pedidos</label>
                        <input type="text" class="form-control" style="text-transform: uppercase;" id="EstadosPedidos"
                        name="EstadosPedidos" />
                        <span class="text-danger" id="texto-error"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Finalizar Alquiler" class="btn btn-success" />
                        <button type="buton" onclick="CancelarPedido();" class="btn btn-danger">Cancelar Pedido</button>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <h1 class="display-4">Productos</h1>
            <!-- Button trigger modal -->
            <div class="mb-2">
                <button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#ModalPedidos">
                    Agregar
                </button>
            </div>
            <!-- Button trigger modal -->
            <table class="table table-bordered table-striped table-condensed">
                <thead>
                    <tr>
                        <th>Nombre</th>
                    </tr>
                </thead>
                <tbody id="tbody-Productos">
                </tbody>
            </table>
        </div>
</body>

@section Scripts {
        <script src="~/js/agregarPedido.js"></script>
}